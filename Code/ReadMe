Installs:
ENV_NAME=gnn_env
y
conda create --name ${ENV_NAME} python=3.6
conda activate ${ENV_NAME}

CUDA=cu100
TORCH=1.6.0
pip install torch==${TORCH}+${CUDA} torchvision==0.7.0+${CUDA} -f https://download.pytorch.org/whl/torch_stable.html --user --no-cache-dir
pip install torch-scatter==latest+${CUDA} -f https://pytorch-geometric.com/whl/torch-${TORCH}.html --user --no-cache-dir
pip install torch-sparse==latest+${CUDA} -f https://pytorch-geometric.com/whl/torch-${TORCH}.html --user --no-cache-dir
pip install torch-cluster==latest+${CUDA} -f https://pytorch-geometric.com/whl/torch-${TORCH}.html --user --no-cache-dir
pip install torch-spline-conv==latest+${CUDA} -f https://pytorch-geometric.com/whl/torch-${TORCH}.html --user --no-cache-dir
pip install torch-geometric --user
pip install transformers --user
pip install -U spacy==2.1.3 --user
pip install neuralcoref --no-binary neuralcoref --user
python -m spacy download en_core_web_sm

